package kr.co.training;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/redGet.do")
public class RedGetController extends HttpServlet {
   private static final long serialVersionUID = 1L;
       
    public RedGetController() {
        super();
    }

   protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
      String[] product = request.getParameterValues("product");
      String gift = request.getParameter("gift");
      String userName = request.getParameter("user_name");
      String addr = request.getParameter("addr");
      String email = request.getParameter("email");
      String phone = request.getParameter("phone");
      String productItem = "";
      String result = "";
      
      for(String item : product) {
         if(item.equals("gift_3")) {
            productItem += "선물용 3kg ";
         } else if(item.equals("gift_5")) {
            productItem += "선물용 5kg ";
         } else if(item.equals("family_3")) {
            productItem += "가정용 3kg ";
         } else if(item.equals("family_5")) {
            productItem += "가정용 5kg ";
         }
      }
      
      if(gift.equals("yes")) {
         result = "합니다";
      } else {
         result = "안합니다";
      }
      
      System.out.println(userName+"님이 주문하신 상품은 : " + productItem + "이며");
      System.out.println("선물 포장 선택은 " + result);
      
      System.out.println("배송 주소 : " + addr);
      System.out.println("이메일 : " + email);
      System.out.println("연락처 : " + phone );
   }

   protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
   }

}